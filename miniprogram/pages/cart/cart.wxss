/* pages/test/index.wxss */
.page{
  padding-bottom: 250rpx;
}

.receive_address_row{
  padding: 0rpx;
}
.address_btn{
  padding: 20rpx;
}

.user_info_row{
  display: flex;
  padding: 20rpx;
}

.user_info_row .user_info{
  flex:5;
}

.user_info_row .user_phone{
  flex :3;
  text-align: right;
}


.cart_content{
  
}
.cart_content .cart_title{
  padding: 20rpx;
  font-size: 36rpx;
  color: var(--themeColor);
  border-top:1rpx solid #ccc ;
  border-bottom:1rpx solid #ccc ;
}

.cart_content .cart_main{
  padding-bottom:100rpx ;
}

.cart_content .cart_main .cart_item{
  display: flex;
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc;
}

.cart_content .cart_main .cart_item .cart_chk_wrap{
  flex:1;
  display: flex;
  justify-content: center;
  align-items: center;
}


.cart_content .cart_main .cart_item .cart_img_wrap{
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}



.cart_content .cart_main .cart_item .cart_info_wrap{
  flex:4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.cart_content .cart_main .cart_item .cart_info_wrap .goods_name{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color:#876;
}

.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_warp{
  display: flex;
  justify-content: space-between;
}

.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_warp .goods_price{
  color: var(--themeColor);
  font-size: 34rpx;
}

.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_warp .cart_num_tool{
  display: flex;
}

.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_warp .cart_num_tool .number_edit{
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #ccc;
}

.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_warp .cart_num_tool .good_num{
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}



.footer_tool{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  border-top: 1rpx solid #ccc;
  padding-bottom: 20rpx;
}

.footer_tool .all_chk_wrap{
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}

.footer_tool .total_price_wrap{
  flex: 5;
  text-align: right;
  padding-right: 15rpx;
  font-size: 27rpx;
}

.footer_tool .total_price_wrap .total_price{

}

.footer_tool .total_price_wrap .total_price .total_price_text{
  color: red;
  font-size: 34rpx;
  font-weight: 600;
}

.footer_tool .order_pay_wrap{
  flex: 3;
  background-color: red;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  justify-content: center;
  align-items: center;
}