/* miniprogram/pages/order/order.wxss */
.order_main{
  font-size: 30rpx;
}

.order_main .order_item{
  padding:20rpx;
  border-bottom: 1rpx solid #ccc;
  color: #666;
}

.order_main .order_item .order_no_row{
  display: flex;
  padding: 10rpx 0;
  justify-content: space-between;
}

.order_main .order_item .order_price_row{
  display: flex;
  padding: 10rpx 0;
  justify-content: space-between;
}

.order_main .order_item .order_price_row .order_price_value{
  color: red;
  font-size: 32rpx;
}
.order_main .order_item .order_time_row{
  display: flex;
  padding: 10rpx 0;
  justify-content: space-between;
}

.order_main .ybtn{
  width: 20rpx;
  background-color:rgb(19, 169, 19);
  color:white;
  margin-top: 25rpx;
}

.order_main .nbtn{
  width: 20rpx;
  background-color:rgb(198, 0, 0);
  color:white;
  margin-top: 25rpx;
}

.order_main .rbtn{
  width: 20rpx;
  background-color:rgb(206, 228, 108);
  color:white;
  margin-top: 25rpx;
}
