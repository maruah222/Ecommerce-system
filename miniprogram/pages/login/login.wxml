<!--pages/auth/auth.wxml-->
<view class="logo">
  <image src='/images/pig.jpg'></image>
  <text>欢迎登陆</text>
</view>

<view class="form">
  <view class="row-group">
    <text>账号</text>
    <input placeholder="请填写邮箱" placeholder-class='txt' maxlength='20' value="{{account}}" bindinput="AccountInput" />
  </view>

   <view class="row-group">
    <text>密码</text>
    <input password="true" placeholder="请填写密码" placeholder-class='txt' maxlength='20' value="{{password}}" bindinput="PasswordInput" />
    <view class="code" bindtap="onClickCheckCode">忘记密码</view>
  </view>
  
  <view>
    <button class="submit"  open-type="getUserInfo" bindtap="onClickSubmit">登录</button>
  </view>
</view>

<view class="bottom-nav">
    <view class="daohan" bindtap="jumptosell">
      <view class="iconfont iconfill"></view>
      <view>商家</view>
    </view>

    <view class="daohan" bindtap="jumptomanager">
      <view class="iconfont iconfill"></view>
      <view>管理员</view>
    </view>
  </view>