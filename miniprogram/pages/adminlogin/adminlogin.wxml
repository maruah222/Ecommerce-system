<!--pages/adminlogin/adminlogin.wxml-->
<view class="nothing"></view>

<view class="form">
  <view class="row-group">
    <text>账号</text>
    <input placeholder="请填写管理员账号" placeholder-class='txt' maxlength='20' value="{{account}}" bindinput="AccountInput" />
  </view>

  <view class="row-group">
    <text>密码</text>
    <input password="true" placeholder="请填写密码" placeholder-class='txt' maxlength='20' value="{{password}}" bindinput="PasswordInput" />
  </view>
</view>

<view class="login">
  <button class="loginbutton" type="primary" bindtap="login">登陆</button>
</view>
